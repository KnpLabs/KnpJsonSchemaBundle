{
    "name": "knplabs/json-schema-bundle",
    "description": "A bundle to generate json schema based on various metadata",
    "license": "MIT",
    "authors": [
        {
            "name":     "Knplabs",
            "homepage": "http://knplabs.com"
        }
    ],
    "require": {
        "php":                          ">=5.4",
        "symfony/validator":            ">=2.1,<2.3-dev",
        "symfony/form":                 ">=2.1,<2.3-dev",
        "symfony/dependency-injection": ">=2.1,<2.3-dev",
        "symfony/config":               ">=2.1,<2.3-dev",
        "symfony/filesystem":           ">=2.1,<2.3-dev",
        "symfony/finder":               ">=2.1,<2.3-dev",
        "symfony/framework-bundle":     ">=2.1,<2.3-dev",
        "justinrainbow/json-schema":    ">=1.2.2",
        "doctrine/common":              ">=2.3,<2.4-dev"
    },
    "require-dev": {
        "phpspec/phpspec2": "dev-develop"
    },
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "Knp\\JsonSchemaBundle": "src/" }
    },
    "target-dir": "Knp/JsonSchemaBundle"
}
